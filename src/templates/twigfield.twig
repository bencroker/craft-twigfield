{% macro includeJs(fieldId, fieldType) %}
    {% do view.registerAssetBundle("nystudio107\\twigfield\\assetbundles\\twigfield\\TwigfieldAsset") %}
    {% css %}
        @font-face {
        font-family: "codicon-override";
        src: url("{{ craft.twigfieldBaseAssetsUrl }}/fonts/codicon.ttf") format("truetype");
        }
    {% endcss %}
    {% js at head %}
    window.twigfieldBaseAssetsUrl = "{{ craft.twigfieldBaseAssetsUrl }}/";
    {% endjs %}
    {% js %}
    makeMonacoEditor("{{ (fieldId)|namespaceInputId }}", "{{ fieldType }}");
    {% endjs %}
{% endmacro %}

{% macro textareaField(config, fieldType = "Twigfield") %}
    {% import "_includes/forms" as forms %}
    {{ forms.textareaField(config) }}
    {{ _self.includeJs(config.id, fieldType) }}
{% endmacro %}

{% macro textarea(config, fieldType = "Twigfield") %}
    {% import "_includes/forms" as forms %}
    {{ forms.textarea(config) }}
    {{ _self.includeJs(config.id, fieldType) }}
{% endmacro %}
