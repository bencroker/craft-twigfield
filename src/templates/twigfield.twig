{% macro includeJs(fieldId, fieldType, wrapperClass) %}
    {% do view.registerAssetBundle("nystudio107\\twigfield\\assetbundles\\twigfield\\TwigfieldAsset") %}
    {% css %}
        @font-face {
        font-family: "codicon-override";
        src: url("{{ alias("@twigfieldBaseAssetsUrl") }}/fonts/codicon.ttf") format("truetype");
        }
    {% endcss %}
    {% js at head %}
        window.twigfieldBaseAssetsUrl = "{{ alias("@twigfieldBaseAssetsUrl") }}/";
    {% endjs %}
    {% js %}
        makeMonacoEditor("{{ (fieldId)|namespaceInputId }}", "{{ fieldType }}", "{{ wrapperClass }}");
    {% endjs %}
{% endmacro %}

{% macro textareaField(config, fieldType = "Twigfield", wrapperClass = "") %}
    {% import "_includes/forms" as forms %}
    {{ forms.textareaField(config) }}
    {{ _self.includeJs(config.id, fieldType) }}
{% endmacro %}

{% macro textarea(config, fieldType = "Twigfield", wrapperClass = "") %}
    {% import "_includes/forms" as forms %}
    {{ forms.textarea(config) }}
    {{ _self.includeJs(config.id, fieldType) }}
{% endmacro %}
